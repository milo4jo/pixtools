# Clerk Authentication
# Get these from: https://dashboard.clerk.com → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk URLs (these are configured)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk Webhook (for user sync to database)
# Create webhook at: Clerk Dashboard → Webhooks → Add Endpoint
# URL: https://your-domain.com/api/webhooks/clerk
# Events: user.created, user.updated, user.deleted
CLERK_WEBHOOK_SECRET=whsec_xxx

# Turso Database
# Get these from: https://app.turso.tech → Your Database → Connect
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_auth_token
